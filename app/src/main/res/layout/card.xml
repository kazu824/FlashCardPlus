<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_item_height"
    android:layout_margin="@dimen/card_item_margin">

    <ImageView
        android:layout_width="@dimen/card_item_height"
        android:layout_height="@dimen/card_item_height"
        android:id="@+id/icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:id ="@+id/title_textView"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/card_item_title_margin"
                android:text="sample text"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:id ="@+id/like_textView"
                android:layout_marginRight="@dimen/card_item_title_margin"
                android:text="0 likes"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/text_size_categoly"
                android:textStyle="italic"
                android:gravity="center_vertical|center_horizontal" />

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="@dimen/card_item_favorite_size"
                android:layout_height="@dimen/card_item_favorite_size"
                android:scaleType="centerInside"
                android:src="@drawable/favo0"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id ="@+id/content"
            android:layout_gravity="center_horizontal|top"
            android:text="sample text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/text_size_content"
            />


    </LinearLayout>


</LinearLayout>